<Window x:Class="articulomodelo.Frontend.ControlUsuario.Eliminar_Articulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.ControlUsuario"
        mc:Ignorable="d"
        Title="Eliminar_Articulo" Height="250" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>


        <TextBlock Text="ELIMINAR ARTÍCULO" 
                   FontSize="30" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,30,0,20"
                   Grid.ColumnSpan="2"/>

        <TextBlock Text="Elige el artículo a borrar" Grid.Row="2" FontSize="20" Margin="40,0" HorizontalAlignment="Right"/>
        <ComboBox x:Name="eliminar_articulo_item" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"
              Width="300" Height="30" Margin="10,0,0,0"
              FontSize="16" BorderBrush="Black" BorderThickness="2"
                        DisplayMemberPath="Nombre" SelectedValuePath="Id"/>

        <Button x:Name="Eliminar" Click="Eliminar_Click_1" Grid.Row="3" 
                HorizontalAlignment="Center" Width="240" Height="60" Margin="0,20" Background="Red" 
                Content="ELIMINAR" Foreground="White" FontSize="30" FontWeight="Bold"/>

        <Button x:Name="Cancelar" Click="Cancelar_Click" Grid.Row="3" Grid.Column ="1" 
          HorizontalAlignment="Center" Width="240" Height="60" Margin="0,20" Background="Blue" 
          Content="CANCELAR" Foreground="White" FontSize="30" FontWeight="Bold"/>
    </Grid>
</Window>
