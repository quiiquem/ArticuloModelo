<mah:MetroWindow x:Class="articulomodelo.Frontend.Dialogos.DialogoArticulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.Dialogos"
        mc:Ignorable="d"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
       x:Name="diagArticulo"
      Loaded="diagArticulo_Loaded"
  
        Title="DialogoArticulo" Height="640" Width="600">
    <Grid>
        <!-- Rectangulo inicial -->
        <Grid Width="Auto"
      Height="100"
      Margin="0,0,0,20"
      VerticalAlignment="Top">
            <Rectangle
        Fill="#454545"/>
            <TextBlock
        Text="INSERTAR ARTICULO"
        FontSize="30"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Foreground="White"/>
        </Grid>

        <!-- Formulario -->
        <Grid Margin="5">
            <TextBlock
        Text="Los campos con asterico son obligatorios"
        Margin="10,100,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="16"
        FontWeight="Bold"
        />
            <TextBlock
        Text="DATOS DEL ARTICULO"
        Margin="10,140,0,0"
        VerticalAlignment="Top"
        HorizontalAlignment="Left"
        FontSize="26"
        Foreground="Red"
        />
            <!-- Definición de la línea -->
            <Line
        X1="10"
        Y1="50"
        X2="580"
        Y2="50"
        Stroke="DarkGray"
        StrokeThickness="1"
        Margin="0,130,0,0"/>

            <StackPanel
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Width="300"
        Margin="0,200,0,0">

                <!-- Modelo -->
                <ComboBox x:Name="cmbModelo"
                          Width="230"
                          Height="40"
                          FontWeight="Bold"
                          mat:HintAssist.Hint="Selecciona un modelo*"
                          ItemsSource="{Binding listaModelosArticulos}"
                          DisplayMemberPath="Nombre"/>

                <!-- Estado -->
                <ComboBox x:Name="cmbEstado"
                          Width="230"
                          Height="40"
                          mat:HintAssist.Hint="Selecciona un estado"/>
            </StackPanel>

            <!-- Parte derecha -->
            <StackPanel
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Width="300"
        Margin="0,200,0,0">

                <!-- Fecha alta -->
                <DatePicker x:Name="dateAlta"
                            Width="230"
                            Height="40"
                            SelectedDate="{Binding articulo.Fechaalta}"
                            mat:HintAssist.Hint="Selecciona una fecha"/>

                <!-- Usuario -->
                <ComboBox x:Name="cmbUsuario"
                          Width="230"
                          Height="40"
                          ItemsSource="{Binding listaUsuarios}"
                          SelectedItem="{Binding articulo.UsuarioaltaNavigation}"
                          mat:HintAssist.Hint="Selecciona un usuario"
                          DisplayMemberPath="Nombre"/>


            </StackPanel>
            <!-- Número de serie -->
            <TextBox x:Name="SerieTextBox"
                     MaxLength="45"
                     FontWeight="Bold"
                     Text="{Binding articulo.Numserie, UpdateSourceTrigger=PropertyChanged}"
                     mat:HintAssist.Hint="Numero de Serie* (Debe ser único)"
                     mat:HintAssist.IsFloating="True"
                     VerticalAlignment="Top"
                     Margin="31,303,31,0"/>

        </Grid>
        <!-- Segunda parte del formulario-->
        <Grid Margin="5,210,5,5">


            <TextBlock
                Text="UBICACIÓN"
                Margin="10,140,0,0"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                FontSize="26"
                Foreground="Red"
                />
            <!-- Definición de la línea -->
            <Line
                X1="10"
                Y1="50"
                X2="580"
                Y2="50"
                Stroke="DarkGray"
                StrokeThickness="1"
                Margin="0,130,0,0"/>

            <StackPanel
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Width="300"
                Margin="0,200,0,0">

                <!-- Departamento -->
                <ComboBox x:Name="cmbDepartamento"
                          Width="230"
                          Height="40"
                          FontWeight="Bold"
                          mat:HintAssist.Hint="Selecciona un departamento*"
                          ItemsSource="{Binding listaDepartamentos}"
                          DisplayMemberPath="Nombre"/>

            </StackPanel>

            <!-- Parte derecha -->
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Width="300"
                Margin="0,200,0,0">

                <!-- Espacio -->
                <ComboBox x:Name="cmbEspacio"
                          Width="230"
                          Height="40"
                          FontWeight="Bold"
                          ItemsSource="{Binding listaEspacios}"
                          mat:HintAssist.Hint="Selecciona un espacio*"
                          DisplayMemberPath="Nombre"/>

            </StackPanel>
            <!-- Campo de texto con límite de 45 caracteres -->

            <!-- Observaciones -->
            <TextBlock Text="Observaciones"
                       Margin="31,270,31,0"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"/>
            <TextBox x:Name="txtObservaciones"
                     mat:HintAssist.IsFloating="False"
                     VerticalAlignment="Top"
                     Margin="31,285,31,0"/>
        </Grid>

        <StackPanel 
            Orientation="Horizontal"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,10,31,40">
            <Button
                Background="Red"
                Foreground="White"
                BorderBrush="Red"
                BorderThickness="2"
                Width="100"
                Height="35"
                Margin="0,0,20,0"
                Content="Cancelar"
                x:Name="btnCancelarArticulo"
                Click="btnCancelarArticulo_Click"/>
            <Button
                BorderBrush="Red"
                BorderThickness="2"
                Foreground="Red"
                Width="100"
                Height="35"
                Content="Guardar"
                x:Name="btnGuardarArticulo"
                Click="btnGuardarArticulo_Click"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
