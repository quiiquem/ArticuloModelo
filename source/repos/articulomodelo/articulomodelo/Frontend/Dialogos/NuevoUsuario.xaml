<Window x:Class="articulomodelo.Frontend.ControlUsuario.NuevoUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.ControlUsuario"
        mc:Ignorable="d"
        Title="NuevoUsuario" Height="350" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.3*"/>
            <ColumnDefinition Width="3.3*"/>
            <ColumnDefinition Width="3.3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Crear Nuevo Usuario" FontSize="30" Grid.ColumnSpan="3" HorizontalAlignment="Center" Margin="0,10"/>
        <Separator Grid.Row="1" Grid.ColumnSpan="3" Margin="10,-10"/>
        
        <!--Usuario y Contraseña-->
        <TextBlock Text="Nombre de Usuario (*)" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="nombre_usuario" Grid.Row="3" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2"/>

        <TextBlock Text="Contraseña (*)" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="1"/>
        <PasswordBox x:Name="contra_usuario" Grid.Row="3" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2" Grid.Column="1"/>
    
        <!--Tipo de Rol en usuario-->
        <TextBlock Text="Tipo de Usuario (*)" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="2"/>
        <ComboBox x:Name="tipo_usuario" Grid.Row="3"  Background="White" Margin="10,-15,10,0" Height="25"
          BorderBrush="Black" BorderThickness="2" Grid.Column="2"/>

        <!--Nombre, apellidos y grupo-->
        <TextBlock Text="Nombre" Grid.Row="4" Margin="10,20"  FontWeight="Bold" FontSize="14" />
        <TextBox x:Name="nombre_real" Grid.Row="5" Grid.ColumnSpan="1" Background="White" Margin="10,-65,10,0" Height="25"
            BorderBrush="Black" BorderThickness="2"/>

        <TextBlock Text="Apellido 1" Grid.Row="4" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="1"/>
        <TextBox x:Name="apellido_1" Grid.Row="5" Grid.ColumnSpan="1" Background="White" Margin="10,-65,10,0" Height="25"
          BorderBrush="Black" BorderThickness="2" Grid.Column="1"/>
        
        <TextBlock Text="Apellido 2" Grid.Row="4" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="2"/>
        <TextBox x:Name="apellido_2" Grid.Row="5" Grid.ColumnSpan="1" Background="White" Margin="10,-65,10,0" Height="25"
           BorderBrush="Black" BorderThickness="2" Grid.Column="2"/>

        <TextBlock Text="Grupo" Grid.Row="5" Margin="10,20"  FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="grupo" Grid.Row="6" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
           BorderBrush="Black" BorderThickness="2"/>
        
        <!--Domicilio , domicilio y email-->
        <TextBlock Text="Domicilio" Grid.Row="5" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="1"/>
        <TextBox x:Name="domicilio" Grid.Row="6" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
     BorderBrush="Black" BorderThickness="2" Grid.Column="1"/>

        <TextBlock Text="Email" Grid.Row="5" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="2"/>
        <TextBox x:Name="email" Grid.Row="6" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
     BorderBrush="Black" BorderThickness="2" Grid.Column="2"/>

<!--Botones-->
        <Button Grid.Row="7" Grid.ColumnSpan="2" Width="150" Height="40" Margin="0,10" Content="Cancelar"
                x:Name="cancelar" Foreground="White" Background="Red" FontSize="20" FontWeight="SemiBold"
                Click="cancelar_Click"/>

        <Button Grid.Row="7" Grid.ColumnSpan="2" Width="150" Height="40" Margin="0,10" Grid.Column="1" Content="Guardar"
                x:Name="guardar_usuario" Foreground="White" Background="Blue" FontSize="20" FontWeight="SemiBold" Click="guardar_usuario_Click"/>
    </Grid>
</Window>
