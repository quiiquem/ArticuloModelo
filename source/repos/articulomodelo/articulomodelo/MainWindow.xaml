<mah:MetroWindow x:Class="articulomodelo.MainWindow"
                 xmlns:local="clr-namespace:articulomodelo"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                 xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared"
                 Title="Tienda modelo articulo"
                 WindowStyle="None"
                 Height="450" Width="800">
    <Grid>
        <!--Definiciones de columnas-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <!--Para que la fila entera tenga ese color negro-->
        <Border Grid.Row="0" Background="#252525" Grid.ColumnSpan="4"/>
        
        <!--<Menu principal-->
        <Menu x:Name="Menu_Principal"  HorizontalAlignment="Left" Height="Auto"
              VerticalAlignment="Top" Width="Auto" IsMainMenu="True" 
              Background="#252525" Foreground="White" Grid.Row="0" Grid.ColumnSpan="3">

            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Background" Value="#252525"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Padding" Value="10"/>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#5af255"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                        
                    </Style.Triggers>
                </Style>
            </Menu.Resources>

            <MenuItem Header="Productos">
                <MenuItem Header="Añadir Producto" Click="Crear_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Add"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Eliminar Producto" Click="Borrar_Click">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Delete"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Editar Producto">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="BoxEdit"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Localizar Producto">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Location"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--Administración Cliente (asi luego hago uno para empleados como administrador)-->
            <MenuItem Header="Administración de clientes">
                <!--Editar Usuarios, Roles y lista negra-->
                <MenuItem Header="Configuración Usuario">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Toolbox"/>
                    </MenuItem.Icon>
                    <!--Editar Usuario-->
                    <MenuItem Header="Editar Usuario">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="UserEdit"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <!--Editar Roles-->
                    <MenuItem Header="Editar Roles">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Edit"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <!--Lista Negra (para vetar)-->
                    <MenuItem Header="Lista Negra">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="Ban"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <!--Contraseñas-->
                <MenuItem Header="Restablecer contraseña">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Password"/>
                    </MenuItem.Icon>
                </MenuItem>
                <!--Emails-->
                <MenuItem Header="Emails">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Email"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--Soporte (por ahora creo q esta bien así)-->
            <MenuItem Header="Soporte">
                <!--Soporte a Cliente-->
                <MenuItem Header="Soporte al cliente">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Support"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--Inventario-->
            <MenuItem Header="Inventario">
                <MenuItem Header="Listado de espacios">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Box"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Chequear Inventario">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Box"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Inventario Nuevo">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Box"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!--Información-->
            <MenuItem Header="Información">
                <MenuItem Header="Informes">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Box"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Gráficos">
                    <MenuItem.Icon>
                        <materialDesign:PackIcon Kind="Box"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>
       
    </Grid>
</mah:MetroWindow>
