<mah:MetroWindow x:Class="ProyectoDI_Trimestre1.Frontend.Dialogos.Crear_Funko"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     xmlns:materialDesignIcons="http://materialdesigninxaml.net/winfx/xaml/shared"
        xmlns:local="clr-namespace:ProyectoDI_Trimestre1.Frontend.Dialogos"
        Icon="/Recursos/Iconos/añadir_figura.png"
   ShowTitleBar="False"
   ShowCloseButton="False"
   ShowMaxRestoreButton="False"
   ShowMinButton="False"
   WindowStyle="None"
   ResizeMode="NoResize"
        Title="Añadir Funko" Height="550" Width="600">
    
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <!--Añadir figura-->
        <TextBlock Text="AÑADIR FIGURA" Grid.ColumnSpan="2" HorizontalAlignment="Center"
                   FontSize="40" FontWeight="Bold" Margin="0,20"/>

        <!--Nombre y Estado-->
        <TextBlock Text="Nombre del Funko(*)" Grid.Row="1" Margin="30,20,0,0"
                   FontSize="20" FontStyle="Italic"/>
        <!--<TextBox del nombre-->
        <Border BorderBrush="#14a9ff" BorderThickness="2" 
                Grid.Row="1" Margin="0,50,0,0" Width="280">
            <TextBox x:Name="nombre_funko" Grid.Row="1" Background="White"/>
        </Border>
        <TextBlock Text="Precio del funko(*)" Grid.Row="1" Margin="30,20,0,0"
           FontSize="20" FontStyle="Italic" Grid.Column="1"/>
        <!--<TextBox del nombre-->
        <Border BorderBrush="#14a9ff" BorderThickness="2" 
        Grid.Row="1" Margin="0,50,0,0" Width="280" Grid.Column="1">
            <TextBox x:Name="precio_fumko" Grid.Row="1" Background="White" TextChanged="precio_fumko_TextChanged" />
        </Border>

        <!--Precio y Categoría-->
        <TextBlock Text="Ubicación Almacén" Grid.Row="2" Margin="30,20,0,0"
                   FontSize="20" FontStyle="Italic"/>
        <!--Precio-->
        <Border BorderBrush="#14a9ff" BorderThickness="2"
                Grid.Row="2" Margin="0,50,0,0" Width="280">
            <TextBox x:Name="precio_funko" Grid.Row="2" Background="White"/>
        </Border>
        <!--Categoría-->
        <TextBlock Text="Categoría del funko(*)" Grid.Row="2" Margin="30,20,0,0"
                 FontSize="20" FontStyle="Italic" Grid.Column="1"/>
        <Border BorderBrush="#005dd6" BorderThickness="2" Grid.Row="2"
                Margin="0,50,0,0" Width="280" Grid.Column="1">
            <ComboBox x:Name="categoria_funko"  Grid.Row="2" Background="White"/>
            <!--ItemsSource="{Binding listaTiposArticulos}" necesita el datacontext-->
        </Border>

        <!--Stock checkbox -->
        <TextBlock Text="Stock disponible: " FontSize="20" FontStyle="Italic" Grid.Row="3" VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>
        <CheckBox x:Name="Stock" Grid.Row="3" HorizontalAlignment="Right" Margin="50,7" VerticalAlignment="Center" Click="Hay_Stock"/>
       
        
        <!--StackPanel que existe si stock esta checked, esta en visibility collapsed para q no se vea hasta q se le da click-->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10" x:Name="stackPanelCantidad" Visibility="Collapsed" 
                    VerticalAlignment="Center" HorizontalAlignment="Right" Grid.ColumnSpan="2">
            <TextBlock Text="Cantidad de Stock" FontStyle="Italic"
                        FontSize="20" HorizontalAlignment="Center" Margin="70,0,0,0"/>
            <Border BorderBrush="#14a9ff" BorderThickness="2" Background="White" Margin="15,0,10,0">
                <TextBox x:Name="cantidad" Text="1" Width="90" PreviewTextInput="cantidad_PreviewTextInput"
                         PreviewKeyDown="cantidad_PreviewKeyDown" DataObject.Pasting="cantidad_Pasting"/> 
            </Border>
        </StackPanel>

        <!--Localización-->
        <TextBlock Text="Localización del Funko" Grid.Row="4" Margin="30,20,0,0"
             FontSize="20" FontStyle="Italic"/>
        <Border BorderBrush="#14a9ff" BorderThickness="2" Background="White"
          Grid.Row="4" Margin="0,50,0,0" Width="280">
            <TextBox x:Name="localizacion_funko" Grid.Row="4"/>
        </Border>
      
        <!--Fecha de ingreso-->
        <TextBlock Text="Fecha de Ingreso" Grid.Row="4" Margin="30,20,0,0"
          FontSize="20" FontStyle="Italic" Grid.Column="1"/>
        <Border BorderBrush="#14a9ff" BorderThickness="2" Background="White"
       Grid.Row="4" Margin="0,50,0,0" Width="280" Grid.Column="1">
            <DatePicker SelectedDate="{Binding FechaIngreso}"/> <!--Hacer que sea una fecha y no texto puro-->
        </Border>

        <!--Botones CANCELAR y GUARDAR-->
        <Button Grid.Row="5" Margin="0,40,0,0" Width="190" Height="60" Background="Transparent" 
                BorderBrush="Red" BorderThickness="4" Content="CANCELAR" Foreground="Red"
                FontSize="30" Click="Cancelar_Boton"/>


        <Button Grid.Row="5" Margin="0,40,0,0" Width="190" Height="60" Background="Blue" 
         BorderBrush="DarkBlue" BorderThickness="4" Content="GUARDAR" Foreground="White" Grid.Column="1"
         FontSize="30" Click="Guardado"/>
    </Grid>
</mah:MetroWindow>