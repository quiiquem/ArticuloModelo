<mah:MetroWindow x:Class="articulomodelo.Frontend.Dialogos.DialogoArticulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.Dialogos"
        mc:Ignorable="d"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
       x:Name="diagArticulo"
      Loaded="diagArticulo_Loaded"
  
        Title="DialogoArticulo" Height="500" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <!--Texto nuevo articulo-->
        <Border BorderThickness="2" Grid.ColumnSpan="2" Grid.Row="1" BorderBrush="Black" Width="550" Height="80" Margin="0,10" Background="CornflowerBlue">
            <TextBlock Text="Crear Nuevo Articulo" FontSize="30"  TextAlignment="Center" Margin="0,20" 
             Width="550" FontWeight="DemiBold" Foreground="White" Height="80"/>
        </Border>

        <!--Nº Serie del articulo-->
        <TextBlock Text="Nº Serie Articulo" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="13"/>
        <TextBox x:Name="txtNumSerie" Grid.Row="3" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2" Text="{Binding articulo.Numserie, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

        <!--Estado-->
        <TextBlock Text="Estado" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="1"/>
        <ComboBox x:Name="txtEstado" Grid.Row="3" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
           ItemsSource="{Binding ListaEstados}"
          SelectedItem="{Binding articulo.Estado, UpdateSourceTrigger=PropertyChanged}"
          BorderBrush="Black" BorderThickness="2" Grid.Column="1"/>

        <!--Fecha Alta-->
        <TextBlock Text="Fecha de Alta" Grid.Row="4"  Margin="10,10" FontWeight="Bold" FontSize="14"/>
        <DatePicker x:Name="dateFechaAlta" Grid.Row="5" Grid.ColumnSpan="1" Background="White" Margin="10,-10,10,0" Height="25"
                      SelectedDate="{Binding articulo.Fechaalta, UpdateSourceTrigger=PropertyChanged}"
                 BorderBrush="Black" BorderThickness="2"/>

        <!--Fecha Baja-->
        <TextBlock Text="Fecha de Baja" Grid.Row="4" Grid.Column="1" Margin="10,10" FontWeight="Bold" FontSize="14"/>
        <DatePicker x:Name="dateFechaBaja" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1" Background="White" Margin="10,-10,10,0" 
                      SelectedDate="{Binding articulo.Fechabaja, UpdateSourceTrigger=PropertyChanged}"
          Height="25" BorderBrush="Black" BorderThickness="2"/>

        <!--Usuario de alta-->
        <TextBlock Text="Usuario de Alta" Grid.Row="6" Margin="10,20" FontWeight="Bold" FontSize="13"/>
        <ComboBox x:Name="comboUsuarioAlta" Grid.Row="7" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2"  ItemsSource="{Binding listaUsuarios}" SelectedItem="{Binding articulo.UsuarioaltaNavigation, 
            UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Username"/>

        <!--Usuario de baja-->
        <TextBlock Text="Usuario de Baja" Grid.Row="6" Margin="10,20" FontWeight="Bold" FontSize="13" Grid.Column="1"/>
        <ComboBox x:Name="comboUsuarioBaja" Grid.Row="7" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2" ItemsSource="{Binding listaUsuarios}" Grid.Column="1"
                  SelectedItem="{Binding articulo.UsuariobajaNavigation,UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Username"/>

        <!--Campos obligatorios-->
        <Separator Grid.Row="8" Grid.ColumnSpan="2" Margin="10,20" BorderBrush="DarkRed" BorderThickness="6"/>

        <TextBlock Text="(*) Campos obligatorios" Grid.Row="9" Grid.ColumnSpan="2" Margin="10,0"  FontWeight="Bold" FontSize="12" Foreground="Black"/>

        <TextBlock Text="Modelo" Grid.Row="10" Grid.ColumnSpan="2" Margin="10,10"  FontWeight="Bold" FontSize="12" Foreground="Black"/>
        <ComboBox x:Name="cmbBox_Modelo" Grid.Row="11" Grid.ColumnSpan="1" Background="White" Margin="10,-5,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2" 
                  
                ItemsSource="{Binding listaModelos}" SelectedItem="{Binding articulo.ModeloNavigation, ValidatesOnDataErrors=True, 
            NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Nombre"/>

        <TextBlock Text="Espacio" Grid.Row="10" Margin="10,10"  FontWeight="Bold" FontSize="12" Foreground="Black" Grid.Column="1"/>
        <ComboBox x:Name="Espacios_CmbBox" Grid.Row="11" Grid.ColumnSpan="1" Background="White" Margin="10,-5,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2" Grid.Column="1" 
                  
                  ItemsSource="{Binding listaEspacios}"  SelectedValuePath="Idespacio"  SelectedItem="{Binding articulo.EspacioNavigation, 
        ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Nombre"/>

        <!--Botones-->
        <Button Grid.Row="12" Grid.ColumnSpan="1" Width="150" Height="40" Margin="10,20" Content="Cancelar" Background="Red" Foreground="White"
              FontSize="20" FontWeight="DemiBold"  Click="btnCancelar_Click"/>

        <Button Grid.Row="12" Grid.ColumnSpan="1" Width="150" Height="40" Margin="10,20" Content="Guardar" Background="Blue" Foreground="White"
      FontSize="20" FontWeight="DemiBold"  Click="btnGuardar_Click" Grid.Column="1" x:Name="GuardarBtn"/>

    </Grid>
</mah:MetroWindow>