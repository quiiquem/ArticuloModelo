<mah:MetroWindow x:Class="articulomodelo.Frontend.Dialogos.DialogoUsuarioNuevo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.Dialogos"
                 xmlns:helpers="clr-namespace:articulomodelo.Helpers"
                    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
   xmlns:mat="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="DialogoUsuario" Height="400" Width="500"
                  Loaded="diagUsuario_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.3*"/>
            <ColumnDefinition Width="3.3*"/>
            <ColumnDefinition Width="3.3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="2" Grid.ColumnSpan="3" Grid.Row="0" BorderBrush="Black" Width="400" Height="80" VerticalAlignment="Center"
                Margin="0,10" Background="CornflowerBlue">
            <TextBlock Text="Crear Nuevo Usuario" FontSize="25" TextAlignment="Center" Margin="0,20" 
       Width="300" FontWeight="DemiBold" Foreground="White" Height="30"/>
        </Border>
        <Separator Grid.Row="1" Grid.ColumnSpan="3" Margin="10,-10"/>

        <!--Usuario y Contraseña-->
        <TextBlock Text="Nombre de Usuario (*)" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="13"/>
        <TextBox x:Name="nombre_usuario" Grid.Row="3" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
                 BorderBrush="Black" BorderThickness="2"
                 
                 Text="{Binding usuario.Username,ValidatesOnDataErrors=True,
                    NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Contraseña (*)" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="1"/>
        <PasswordBox x:Name="contra_usuario" Grid.Row="3" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
             BorderBrush="Black" BorderThickness="2" Grid.Column="1"
             
  helpers:PasswordBoxHelper.BoundPassword="{Binding usuario.Password, ValidatesOnDataErrors=True,
  NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"/>

        <!--Tipo de usuario-->
        <TextBlock Text="Tipo de Usuario (*)" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="2"/>
        <ComboBox x:Name="tipo_usuario" Grid.Row="3" Background="White" Margin="10,-15,10,0" Height="25"
          BorderBrush="Black" BorderThickness="2" Grid.Column="2"
          
                  
                  ItemsSource="{Binding listaTipoUsuario}" SelectedValuePath="Idtipousuario"
          SelectedValue="{Binding usuario.Tipo,ValidatesOnDataErrors=True, NotifyOnValidationError=True, 
           UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Nombre"/>

        <!--Separador-->
        <Separator BorderBrush="DarkRed" BorderThickness="6" Grid.Row="3" Margin="0,0,0,-30" Grid.ColumnSpan="3" Height="10"/>

        <!--Nombre, apellidos y grupo-->
        <TextBlock Text="Nombre" Grid.Row="4" Margin="10,20"  FontWeight="Bold" FontSize="14" />
        <TextBox x:Name="nombre_real" Grid.Row="5" Grid.ColumnSpan="1" Background="White" Margin="10,-65,10,0" Height="25"
            BorderBrush="Black" BorderThickness="2"/>

        <TextBlock Text="Apellido 1" Grid.Row="4" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="1"/>
        <TextBox x:Name="apellido_1" Grid.Row="5" Grid.ColumnSpan="1" Background="White" Margin="10,-65,10,0" Height="25"
          BorderBrush="Black" BorderThickness="2" Grid.Column="1"/>

        <TextBlock Text="Apellido 2" Grid.Row="4" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="2"/>
        <TextBox x:Name="apellido_2" Grid.Row="5" Grid.ColumnSpan="1" Background="White" Margin="10,-65,10,0" Height="25"
           BorderBrush="Black" BorderThickness="2" Grid.Column="2"/>

        <TextBlock Text="Grupo" Grid.Row="5" Margin="10,20"  FontWeight="Bold" FontSize="14"/>
        <ComboBox x:Name="grupo" Grid.Row="6" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
          BorderBrush="Black" BorderThickness="2"
                  
          ItemsSource="{Binding listaGrupo}" SelectedValuePath="Nombre" 
                  SelectedValue="{Binding usuario.Grupo, UpdateSourceTrigger=PropertyChanged}" 
          DisplayMemberPath="Nombre"/>
        
        
        <!--Domicilio , domicilio y email-->
        <TextBlock Text="Departamento" Grid.Row="5" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="1"/>
        <ComboBox x:Name="domicilio" Grid.Row="6" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
          BorderBrush="Black" BorderThickness="2" Grid.Column="1"
         
          ItemsSource="{Binding listaDepartamentos}" SelectedValuePath="Iddepartamento" 
         SelectedValue="{Binding usuario.Departamento, UpdateSourceTrigger=PropertyChanged}" 
          DisplayMemberPath="Nombre"/>

        <TextBlock Text="Rol (*)" Grid.Row="5" Margin="10,20"  FontWeight="Bold" FontSize="14" Grid.Column="2"/>
        <ComboBox x:Name="rol" Grid.Row="6" Grid.ColumnSpan="1" Background="White" Margin="10,-15,10,0" Height="25"
          BorderBrush="Black" BorderThickness="2" Grid.Column="2"
         
          ItemsSource="{Binding listaRol}" SelectedValuePath="Idrol" SelectedValue="{Binding usuario.Rol, 
         ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}"
          DisplayMemberPath="Nombre"/>

        <!--Botones-->
        <Button Grid.Row="7" Grid.ColumnSpan="2" Width="150" Height="40" Margin="0,10" Content="Cancelar"
                x:Name="cancelar" Foreground="White" Background="Red" FontSize="20" FontWeight="SemiBold"
                Click="cancelar_Click"/>
        
        <Button Grid.Row="7" Grid.ColumnSpan="2" Width="150" Height="40" Margin="0,10" Grid.Column="1" Content="Guardar"
                x:Name="guardar_usuario" Foreground="White" Background="Blue" FontSize="20" FontWeight="SemiBold" Click="guardar_usuario_Click"/>
    </Grid>
</mah:MetroWindow>
