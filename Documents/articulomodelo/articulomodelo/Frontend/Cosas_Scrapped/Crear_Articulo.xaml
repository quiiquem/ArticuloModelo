<Window x:Class="articulomodelo.Frontend.Cosas_Scrapped.Crear_Articulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.Cosas_Scrapped"
        mc:Ignorable="d"
        Title="Crear_Articulo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Características del Artículo" FontSize="30"/>
        <Separator Grid.ColumnSpan="2" Grid.Row="1"/> 
        
        <!--Datos del articulo obligatorios-->
        <TextBlock Text="Nombre del modelo (*)" Grid.Row="2" Margin="10,20"  FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="nom_art" Grid.Row="3" Background="White" Margin="10,0" Height="25"
                 BorderBrush="Black" BorderThickness="3" Text="{Binding modeloArticulo.Nombre, ValidatesOnDataErrors=True,
            NotifyOnValidationError=True,UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Marca (*)" Grid.Row="2" Grid.Column="1" Margin="10,20"  FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="marca_art" Grid.Row="3" Grid.Column="1" Background="White" Margin="10,0" Height="25"
                 BorderBrush="Black" BorderThickness="3"  Text="{Binding modeloArticulo.Marca, ValidatesOnDataErrors=True,
            NotifyOnValidationError=True,UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Tipo Modelo (*)" Grid.Row="4"  Margin="10,20"  FontWeight="Bold" FontSize="16"/>
        <ComboBox x:Name="tipo_art" Grid.Row="5"  Background="White" Margin="10,0" Height="25"
          BorderBrush="Black" BorderThickness="3" 
            ItemsSource="{Binding listaTiposArticulos}" 
            SelectedItem="{Binding modeloArticulo.TipoNavigation,
            ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
        
        <!--Otros datos-->

        <TextBlock Text="Modelo" Grid.Row="4" Grid.Column="1" Margin="10,20"  FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="modelo_art" Grid.Row="5" Grid.Column="1" Background="White" Margin="10,0" Height="25"
           BorderBrush="Black" BorderThickness="3"/>

        <TextBlock Text="Descripción" Grid.Row="6" Margin="10,20"  FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="desc" Grid.Row="7" Grid.ColumnSpan="2" Background="White" Margin="10,0" Height="25"
          BorderBrush="Black" BorderThickness="3"/>

        <!--Botones-->
        <Button x:Name="Guardar" Content="GUARDAR" Grid.Row="8" Grid.Column="1"
                Margin="0,30" Width="200" Height="60" Background="#82e4fa"
                Foreground="White" FontSize="30" FontWeight="Bold"/>

        <Button x:Name="Cancelar" Content="CANCELAR" Grid.Row="8" 
        Margin="0,30" Width="200" Height="60" Background="#bf1515"
        Foreground="White" FontSize="30" FontWeight="Bold"/>
    </Grid>
</Window>
