<UserControl x:Class="articulomodelo.Frontend.ControlUsuario.UCArticulos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.ControlUsuario"
        mc:Ignorable="d"
        Loaded="usuario_listaArticulos_Loaded"
        d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Border BorderThickness="2" BorderBrush="Black" Width="550" Height="80" Margin="0,10" Background="CornflowerBlue">
                <TextBlock Text="Lista Articulos" FontSize="30"  TextAlignment="Center" Margin="0,20" 
Width="550" FontWeight="DemiBold" Foreground="White" Height="80"/>
            </Border>
        </Grid>
        <Grid>
            <DataGrid ItemsSource="{Binding listaArticulos}" AutoGenerateColumns="False"
              CanUserAddRows="False" ColumnWidth="*" Background="AntiqueWhite" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="NÚMERO DE SERIE" Binding="{Binding Numserie}"/>
                    <DataGridTextColumn Header="MODELO" Binding="{Binding ModeloNavigation.Nombre}"/>
                    <DataGridTextColumn Header="ESTADO" Binding="{Binding Estado}"/>
                    <DataGridTextColumn Header="ESPACIO" Binding="{Binding EspacioNavigation.Nombre}"/>
                    <DataGridTextColumn Header="USUARIO ALTA" Binding="{Binding UsuarioaltaNavigation.Username, StringFormat=d}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
    </DockPanel>
</UserControl>
