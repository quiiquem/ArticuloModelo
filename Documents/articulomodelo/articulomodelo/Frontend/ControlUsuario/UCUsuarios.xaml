<UserControl x:Class="articulomodelo.Frontend.ControlUsuario.UCUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.ControlUsuario"
        mc:Ignorable="d"
        Loaded="usuario_listaUsuario_loaded"
        d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <!-- Contenido principal -->
        <DockPanel>
            <!-- Encabezado -->
            <Border DockPanel.Dock="Top" BorderThickness="2"  BorderBrush="Black" 
  Background="CornflowerBlue" Padding="20" Margin="10">
 <TextBlock Text="Lista Usuarios" FontSize="30"  TextAlignment="Center" 
  FontWeight="DemiBold" Foreground="White" VerticalAlignment="Center"/>
            </Border>

            <!-- DataGrid con scroll PROPIO -->
            <DataGrid Margin="10" ItemsSource="{Binding listaUsuario}" AutoGenerateColumns="False" 
          MinColumnWidth="100" CanUserAddRows="False" ColumnWidth="Auto" IsReadOnly="True" 
                      Background="AntiqueWhite">
                <DataGrid.Columns>
                    <!--USERNAME-->
                    <DataGridTextColumn Header="USERNAME" Binding="{Binding Username}"/>
                    <!--TIPO-->
                    <DataGridTextColumn Header="TIPO" Binding="{Binding TipoNavigation.Nombre}"/>
                    <!--ROL-->
                    <DataGridTextColumn Header="ROL" Binding="{Binding RolNavigation.Nombre}"/>
                    <!--GRUPO Y DEPARTAMENTO-->
                    <DataGridTextColumn Header="GRUPO" Binding="{Binding GrupoNavigation.Nombre}"/>
                    <DataGridTextColumn Header="DEPARTAMENTO" Binding="{Binding DepartamentoNavigation.Nombre}"/>
                    <!--NOMBRE Y APELLIDOS-->
                    <DataGridTemplateColumn Header="NOMBRE - APELLIDOS">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                                    <TextBlock Text=" | " Margin="5,0"/>
                                    <TextBlock Text="{Binding Apellido1}" FontWeight="Bold"/>
                                    <TextBlock Text=" | " Margin="5,0"/>
                                    <TextBlock Text="{Binding Apellido2}" FontWeight="Bold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                
                <!--Poner RowDetails DEBAJO de los columns-->
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate>
                        <TextBlock Text="test" Margin="10" FontStyle="Italic" Foreground="Gray"/>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </DockPanel>

        <!-- Overlay de carga FUERA del ScrollViewer -->
        <Grid x:Name="OverlayCargando"
              Background="#80000000" 
              Visibility="Collapsed"
              Panel.ZIndex="999">
            <Border Background="White" 
                    CornerRadius="10" 
                    Padding="40,30"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    BorderBrush="CornflowerBlue"
                    BorderThickness="2">
                <TextBlock Text="Cargando..." 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="CornflowerBlue"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>