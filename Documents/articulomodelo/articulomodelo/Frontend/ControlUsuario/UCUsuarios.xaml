<UserControl x:Class="articulomodelo.Frontend.ControlUsuario.UCUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:articulomodelo.Frontend.ControlUsuario"
        mc:Ignorable="d"
             Loaded="usuario_listaUsuario_loaded"
        d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Border BorderThickness="2" BorderBrush="Black" Width="550" Height="80" Margin="0,10" Background="CornflowerBlue">
                <TextBlock Text="Lista Modelo Articulo" FontSize="30"  TextAlignment="Center" Margin="0,20" 
      Width="550" FontWeight="DemiBold" Foreground="White" Height="80"/>
            </Border>
        </Grid>
        <Grid>
            <DataGrid ItemsSource="{Binding listaUsuario}" AutoGenerateColumns="False" MinColumnWidth="100"
                      CanUserAddRows="False" ColumnWidth="Auto" IsReadOnly="True" Background="AntiqueWhite">
                <DataGrid.Columns>

                    <!--USERNAME (contraesña no sale por obvias razones)-->
                    <DataGridTextColumn Header="USERNAME" Binding="{Binding Username}" IsReadOnly="True"/>
                    <!--TIPO-->
                    <DataGridTextColumn Header="TIPO" Binding="{Binding Tipo}" IsReadOnly="True"/>
                    <!--ROL-->
                    <DataGridTextColumn Header="ROL" Binding="{Binding Rol}" IsReadOnly="True"/>
                    <!--GRUPO Y DEPARTAMENTO-->
                    <DataGridTemplateColumn Header="GRUPO - DEPARTAMENTO" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding Grupo}" FontWeight="Bold"/>
                                    <TextBlock Text="|"/>
                                    <TextBlock Text="{Binding Departamento}" FontWeight="Bold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <!--NOMBRE Y APELLIDOS-->
                        <DataGridTemplateColumn Header="NOMBRE - APELLIDOS" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                                        <TextBlock Text="|"/>
                                        <TextBlock Text="{Binding Apellido1}" FontWeight="Bold"/>
                                        <TextBlock Text="|"/>
                                        <TextBlock Text="{Binding Apellido2}" FontWeight="Bold"/>
                                </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
